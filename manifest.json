{
	"manifest_version": 2,
	
	"name": "YouTubeNotifications",
	"author": "@@AUTHOR@@",
	"homepage_url": "@@HOMEPAGE@@",
	"version": "@@VERSION@@",
	"description": "Shows YouTube notifications in the toolbar.",
	
	"icons": {
		"16": "images/icon-16.png",
		"32": "images/icon-32.png",
		"48": "images/icon-48.png",
		"64": "images/icon-64.png"
	},
	
	"applications": {
		"gecko": {
			"id": "youtubenotifications@fkloft.github.com",
			"strict_min_version": "50.0"
		}
	},
	
	"permissions": [
		"storage",
		"*://www.youtube.com/*"
	],
	
	"background": {
		"scripts": ["js/background.js"]
	},
	
	"browser_action": {
		"default_title": "YouTube",
		"browser_style": true,
		"default_popup": "popup.htm?popup=1",
		"default_icon": {
			"16": "images/icon-16.png",
			"32": "images/icon-32.png",
			"48": "images/icon-48.png",
			"64": "images/icon-64.png"
		}
	}
}
