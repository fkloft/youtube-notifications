{
	"manifest_version": 2,
	
	"name": "YouTubeNotifications",
	"version": "1.0",
	"description": "Shows YouTube notifications in the toolbar.",
	
	"icons": {
		"16": "icon-16.png",
		"32": "icon-32.png",
		"48": "icon-48.png",
		"64": "icon-64.png"
	},
	
	"applications": {
		"gecko": {
			"id": "youtubenotifications@fkloft.github.com",
			"strict_min_version": "50.0"
		}
	},
	
	"permissions": [
		"*://www.youtube.com/*"
	],
	
	"background": {
		"scripts": ["background.js"]
	},
	
	"browser_action": {
		"default_title": "YouTube",
		"browser_style": false,
		"default_popup": "popup.htm",
		"default_icon": {
			"16": "icon-16.png",
			"32": "icon-32.png",
			"48": "icon-48.png",
			"64": "icon-64.png"
		}
	}
}
